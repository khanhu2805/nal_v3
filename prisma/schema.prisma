// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name String 
  desc String
  price Int
  quanity Int
  size String
  color String
  img String
  category String
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  phone String @unique
  password String
  money Int
}
